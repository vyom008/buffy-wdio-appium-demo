{
    "compilerOptions": {
        "baseUrl": ".", // Set root for relative paths
        "paths": {
            "*": [
                "*",
                "test/*"
            ] // Helps with resolving modules inside `test`
        }
    },
    "include": [
        "test/**/*",
        "node_modules/@wdio/sync",
        "node_modules/@wdio/mocha-framework"
    ]
}